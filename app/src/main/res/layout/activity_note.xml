<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_note"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoteActivity">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="text"
        android:id="@+id/note_edit_text"
        android:gravity="top"
        android:background="@android:color/transparent"
        android:padding="10dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="Delete this note"
        android:onClick="delete"
        app:layout_constraintBottom_toBottomOf="@+id/activity_note"
        app:layout_constraintLeft_toLeftOf="@+id/activity_note"
        app:layout_constraintRight_toRightOf="@+id/activity_note" />
</androidx.constraintlayout.widget.ConstraintLayout>